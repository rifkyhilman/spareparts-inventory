<%- include('layout/header') %>

<div class="container">
    <div class="row mt-5">
        <div class="col-lg-12">
          <% if(message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
              <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
              <strong><%= message.message%></strong>
            </div>
          <% } %>
          <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                  <tr class="table-dark">
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody class="table-secondary">
                  <% data.forEach((row, index) => { %>                    
                  <tr>
                    <th scope="row"><%= index %></th>
                    <td><%= row.name %></td>
                    <td><%= row.description %></td>
                    <td><%= row.price %></td>
                    <td> <img src="<%= row.image %>" alt="image_product_<%= row.name %>" width="50" class="image-thumbnail"></td>
                    <td>
                      <a href="/edit" class="text-success">
                        <i class='bx bxs-edit mx-1'></i>
                      </a> 
                      <a href="/products/delete/<%= row.id %>" data-method="delete" class="text-danger">
                        <i class='bx bxs-trash mx-1'></i>
                      </a>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
            </table>
          </div>
        </div>
    </div>
</div>


<%- include('layout/footer') %>
